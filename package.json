{
  "name": "configure-yaml",
  "version": "0.0.0",
  "description": "The integrated configuration loader using YAML.",
  "keywords": [
    "app",
    "application",
    "config",
    "configuration",
    "vessel",
    "front-end",
    "back-end"
  ],
  "homepage": "https://github.com/mornya/configure-yaml",
  "license": "MIT",
  "author": "mornya <mornya78@gmail.com>",
  "private": false,
  "repository": "https://github.com/mornya/configure-yaml",
  "bugs": "https://github.com/mornya/configure-yaml/issues",
  "main": "./dist/index.js",
  "types": "./dist",
  "scripts": {
    "setup": "husky install && lintest install || exit 0",
    "prepublishOnly": "vessel prepublish",
    "login": "vessel login",
    "clean": "vessel clean",
    "build": "vessel build",
    "watch": "vessel build --watch",
    "format": "prettier --write --ignore-path .prettierignore ./src ./types",
    "check": "vessel check",
    "init": "lintest uninstall && lintest export",
    "lint": "lintest lint",
    "lint:fix": "lintest lint --fix",
    "test": "lintest test",
    "test:watch": "lintest test --watch",
    "test:coverage": "lintest test --coverage",
    "sonar": "sonar-scanner"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/test",
    "!dist/**/@setup.d.ts",
    "!dist/**/@setup.js",
    "!dist/**/*.test.d.ts",
    "!dist/**/*.test.js",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "@mornya/cli-libs": "^0.20.3",
    "deepmerge": "^4.3.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@lintest/core": "^1.16.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/webpack-env": "^1.18.4",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "prettier --write --ignore-path .prettierignore"
    ],
    "*.{ts,tsx}": [
      "prettier --write --ignore-path .prettierignore",
      "npm run check",
      "npm run lint"
    ]
  },
  "vessel": {
    "minVersion": "5.3.0"
  }
}
